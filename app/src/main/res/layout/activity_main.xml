<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/spartyImage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/sparty"
        android:layout_weight="5"
        android:padding="20dp"
        android:contentDescription="@string/finished_puzzle"
        android:onClick="onStartPuzzle" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:text="@string/start_puzzle"
            android:id="@+id/buttonStart"
            android:layout_gravity="center"
            android:onClick="onStartPuzzle" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/welcome_to_puzzle_screen"
        android:id="@+id/textWelcome"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center" />
</LinearLayout>